# Protéger le fichier .htaccess
<Files .htaccess>
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</Files>

# Désactiver la signature du serveur
ServerSignature Off

# Bloquer l'accès aux fichiers sensibles
<FilesMatch "^(\.git|\.env|composer\.(json|lock)|package(-lock)?\.json|npm-debug\.log|yarn-error\.log|Gruntfile\.js|gulpfile\.js|webpack\.config\.js)">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

